@layer components {
  .btn {
    @apply text-center font-semibold rounded py-4 px-5 text-white bg-secondary;
    &:hover {
      @apply border-primary-300 bg-secondary-700 text-white;
    }

    &.btn--active {
      @apply text-white bg-primary border-primary;
      &:hover {
        @apply bg-primary-600;
      }
    }
    &.btn--disabled,
    &[disabled='true'],
    &:disabled {
      @apply text-gray-400 cursor-not-allowed;
    }
  }
}
